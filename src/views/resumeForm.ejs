<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Resume Form</title>
    <link rel="stylesheet" href="/css/form_styles.css">
</head>
<body>
    <header>
        <h1>Submit Your Resume</h1>
    </header>

    <div class="resume-form">
        <form action="/resume/submit" method="post">
            <!-- Header Info -->
            <div class="form-group">
                <label for="name">Name:</label>
                <input type="text" id="name" name="name" required placeholder="Enter your name">
            </div>

            <div class="form-group">
                <label for="tagline">Tagline:</label>
                <input type="text" id="tagline" name="tagline" required placeholder="Enter your tagline">
            </div>

            <div class="form-group">
                <label for="email">Email:</label>
                <input type="email" id="email" name="email" required placeholder="Enter your email">
            </div>

            <div class="flex-group">
                <div class="form-group">
                    <label for="phone">Phone:</label>
                    <input type="tel" id="phone" name="phone" required placeholder="Enter your phone number">
                </div>

                <div class="form-group">
                    <label for="dob">Date of Birth:</label>
                    <input type="date" id="dob" name="dob" required>
                </div>
            </div>

            <!-- Skills Section -->
            <h2>Skills</h2>

            <!-- Main Skills Subsection -->
            <div class="form-group">
                <label for="programming_languages">Programming Languages (comma-separated):</label>
                <textarea id="programming_languages" name="programming_languages" rows="2" required placeholder="e.g., JavaScript, Python, Java"></textarea>
            </div>

            <div class="form-group">
                <label for="tools">Tools (comma-separated):</label>
                <textarea id="tools" name="tools" rows="2" required placeholder="e.g., Git, Docker, Jenkins"></textarea>
            </div>

            <div class="form-group">
                <label for="frameworks">Frameworks (comma-separated):</label>
                <textarea id="frameworks" name="frameworks" rows="2" required placeholder="e.g., Express.js, React, Angular"></textarea>
            </div>
            
            <div class="form-group">
                <label for="technologies">Technologies (comma-separated):</label>
                <textarea id="technologies" name="technologies" rows="2" required placeholder="e.g., REST APIs, GraphQL, Microservices"></textarea>
            </div>

            <div class="form-group">
                <label for="otherSkills">Other Skills (comma-separated):</label>
                <textarea id="otherSkills" name="otherSkills" rows="2" required placeholder="e.g., Content Creation, Public Speaking"></textarea>
            </div>

            <!-- Education Section -->
            <h2>Education</h2>

            <div class="education-section">
                <!-- Degree -->
                <div class="education-item">
                    <h3>Degree</h3>
                    
                    <div class="form-group">
                        <label for="degree_institute">Institute Name:</label>
                        <input type="text" id="degree_institute" name="degree_institute" required placeholder="Enter your institute name">
                    </div>

                    <div class="flex-group">
                        <div class="form-group">
                            <label for="degree_course">Degree/Course:</label>
                            <input type="text" id="degree_course" name="degree_course" required placeholder="Degree or Btech">
                        </div>
                                        
                        <div class="form-group">
                            <label for="degree_branch">Branch:</label>
                            <input type="text" id="degree_branch" name="degree_branch" placeholder="e.g., CSE, ECE, AIML">
                        </div>
                    </div>

                    <div class="flex-group">
                        <div class="form-group">
                            <label for="degree_year">Academic Year:</label>
                            <input type="text" id="degree_year" name="degree_year" required placeholder="Academic Year">
                        </div>

                        <div class="form-group">
                            <label for="degree_percentage">Percentage (GPA/CGPA):</label>
                            <input type="text" id="degree_percentage" name="degree_percentage" required placeholder="Percentage (GPA/CGPA)">
                        </div>
                    </div>
                </div>

                <!-- Intermediate -->
                <div class="education-item">
                    <h3>Intermediate</h3>
                    
                    <div class="form-group">
                        <label for="intermediate_institute">Institute Name:</label>
                        <input type="text" id="intermediate_institute" name="intermediate_institute" required placeholder="Enter your institute name">
                    </div>
                    
                    <div class="form-group">
                        <label for="intermediate_course">Course:</label>
                        <input type="text" id="intermediate_course" name="intermediate_course" required placeholder="e.g., MPC, CEC, MEC">
                    </div>
                    
                    <div class="flex-group">
                        <div class="form-group">
                            <label for="intermediate_year">Academic Year:</label>
                            <input type="text" id="intermediate_year" name="intermediate_year" required placeholder="Academic Year. eg. 2020 -2022">
                        </div>
                        
                        <div class="form-group">
                            <label for="intermediate_percentage">Percentage:</label>
                            <input type="text" id="intermediate_percentage" name="intermediate_percentage" required placeholder="Percentage">
                        </div>
                    </div>
                </div>

                <!-- SSC -->
                <div class="education-item">
                    <h3>SSC</h3>
                    
                    <div class="form-group">
                        <label for="ssc_school">School Name:</label>
                        <input type="text" id="ssc_school" name="ssc_school" required placeholder="Enter your school name">
                    </div>
                    
                    <div class="flex-group">
                        <div class="form-group">
                            <label for="ssc_year">Year:</label>
                            <input type="text" id="ssc_year" name="ssc_year" required placeholder="Year">
                        </div>
                        
                        <div class="form-group">
                            <label for="ssc_percentage">Percentage:</label>
                            <input type="text" id="ssc_percentage" name="ssc_percentage" required placeholder="Percentage">
                        </div>
                    </div>
                </div>
            </div>

            <!-- Additional Sections -->
             <!-- Languages Known Section -->
            <h2>Languages Known</h2>
            <textarea id="languages_known" name="languages_known" rows="2" required placeholder="e.g., English, Hindi, Telugu"></textarea>

            <!-- Experienc Section -->
            <h2>Experience</h2>
            <div class="form-group">
                <label for="company_name">Company Name:</label>
                <input type="text" id="company_name" name="company_name" required placeholder="Enter your company name">
            </div>

            <div class="form-group">
                <label for="position">Position:</label>
                <input type="text" id="position" name="position" required placeholder="Enter your position">
            </div>

            <div class="form-group">
                <label for="duration">Duration:</label>
                <input type="text" id="duration" name="duration" required placeholder="e.g., June 2020 - July 2021">
            </div>

            <div class="form-group">
                <label for="location">Location:</label>
                <input type="text" id="location" name="location" required placeholder="Location">
            </div>

            <div class="form-group">
                <label for="technologies_used">Technologies Used:</label>
                <textarea id="technologies_used" name="technologies_used" rows="2" required placeholder="e.g., React, Node.js"></textarea>
            </div>

            <!-- Projects Section -->
            <h2>Projects</h2>

            <div class="form-group">
                <label for="project_name">Project Name:</label>
                <input type="text" id="project_name" name="project_name" required placeholder="Enter your project name">
            </div>

            <div class="form-group">
                <label for="project_tech">Technologies Used:</label>
                <textarea id="project_tech" name="project_tech" rows="2" required placeholder="e.g., JavaScript, MongoDB"></textarea>
            </div>

            <div class="form-group">
                <label for="project_description">Project Description:</label>
                <textarea id="project_description" name="project_description" rows="4" required placeholder="Describe your project"></textarea>
            </div>

            <!-- Achievements and Certifications Section -->
            <h2>Achievements and Certifications</h2>

            <div class="form-group">
                <label for="achievements">Achievements:</label>
                <textarea id="achievements" name="achievements" rows="2" required placeholder="e.g., Top Performer of the Year"></textarea>
            </div>

            <div class="form-group">
                <label for="certifications">Certifications:</label>
                <textarea id="certifications" name="certifications" rows="2" required placeholder="e.g., AWS Certified Solutions Architect"></textarea>
            </div>

            <!-- LINKS section -->
            <div class="form-group">
                <label for="links">Links (e.g., GitHub, LinkedIn):</label>
                <textarea id="links" name="links" rows="2" required placeholder="e.g., https://github.com/yourprofile"></textarea>
            </div>

            <button type="submit">Submit</button>
        </form>
    </div>
</body>
</html>
